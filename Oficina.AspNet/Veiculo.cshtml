@using Oficina.AspNet;
@{ var _veiculoAplicacao = new VeiculoAplicacao();}

<!DOCTYPE html>
<html>
<head>
    <title>Cadastro de veículos</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    <style>
        body {
            /*font-family: 'Segoe UI';*/
            font-family: 'Roboto', sans-serif;
            /*font-size: 16px;*/
        }

        label {
            display: inline-block;
            min-width: 100px;
        }

        input, select, button {
            min-width: 200px;
            min-height: 24px;
            margin-bottom: 5px;
        }

            input[type=submit] {
                width: 300px;
            }

        #mensagemErro {
            height: 40px;
            background-color: #dc3545;
            margin-bottom: 10px;
            color: white;
            text-align: center;
            vertical-align: middle;
            line-height: 40px;
        }
    </style>
</head>
<body onload="exibirMensagem();">
    <h1>Cadastro de veículos</h1>
    <hr />
    @if (IsPost)
    {
        try
        {
            _veiculoAplicacao.Inserir();
            Response.Redirect("Veiculo?mensagem=Veículo gravado com sucesso!");
        }
        catch
        {
            <div id="mensagemErro">@HttpContext.Current.Items["MensagemErro"]</div>
        }
    }
    <form method="post">
        <label for="marca">Marca</label>
        <select name="marca" onchange="obterModelos(this.value);">
            <option value="">Selecione</option>
            @foreach (var marca in _veiculoAplicacao.Marcas)
            {
                <option value="@marca.Id" selected="@Convert.ToBoolean(_veiculoAplicacao.MarcaSelecionada == marca.Id.ToString())">@marca.Nome</option>
            }
        </select>
        <br />

        <label for="modelo">Modelo</label>
        <select name="modelo">
            <option value="">Selecione</option>
            @foreach (var modelo in _veiculoAplicacao.Modelos)
            {
                <option value="@modelo.Id" selected="@Convert.ToBoolean(modelo.Id.ToString() == Request.Form["modelo"])">@modelo.Nome</option>
            }
        </select>
        <br />

        <label for="placa">Placa</label>
        <input type="text" name="placa" value="@Request.Form["placa"]" />
        <br />

        <label for="ano">Ano</label>
        <input type="text" name="ano" value="@Request.Form["ano"]" />
        <br />

        <label for="cor">Cor</label>
        <select name="cor">
            <option value="">Selecione</option>
            @foreach (var cor in _veiculoAplicacao.Cores)
            {
                <option value="@cor.Id" selected="@Convert.ToBoolean(cor.Id.ToString() == Request.Form["cor"])">@cor.Nome</option>
            }
        </select>
        <br />

        <label for="combustivel">Combustível</label>
        <select name="combustivel">
            <option value="">Selecione</option>
            @foreach (var combustivel in _veiculoAplicacao.Combustiveis)
            {
                <option value="@((int)combustivel)">@combustivel</option>
            }
        </select>
        <br />

        <label for="cambio">Câmbio</label>
        <select name="cambio">
            <option value="">Selecione</option>
            @foreach (var cambio in _veiculoAplicacao.Cambios)
            {
                <option value="@((int)cambio)">@cambio</option>
            }
        </select>
        <br />

        <label for="observacao">Observação</label>
        <br />
        <textarea name="observacao" rows="10" cols="40"></textarea>
        <br />

        <input type="submit" value="Gravar" />
    </form>

    <script type="text/javascript">
        //window.onload = exibirMensagem;

        function obterModelos(marcaId) {
            const nomePagina = document.location.pathname;
            document.location.href = nomePagina + "?marcaId=" + marcaId;
        }

        function exibirMensagem () {
            const params = (new URL(document.location)).searchParams;
            const mensagem = params.get("mensagem");

            if (mensagem) {
                alert(mensagem);
                document.location.href = "Veiculo";
            }
        }
    </script>
</body>
</html>