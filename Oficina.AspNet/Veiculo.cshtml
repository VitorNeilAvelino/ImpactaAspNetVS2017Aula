@using Oficina.AspNet
@{ var _veiculoAplicacao = new VeiculoAplicacao();}

<!DOCTYPE html>
<html>
<head>
    <title>Cadastro de veículos</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    <style>
        body {
            /*font-family: 'Segoe UI';*/
            font-family: 'Roboto', sans-serif;
            font-size: 16px;
        }

        label {
            display: inline-block;
            min-width: 100px;
        }

        input, select {
            min-width: 200px;
            min-height: 24px;
            margin-bottom: 5px;
        }

            input[type=submit] {
                width: 300px;
            }
    </style>
</head>
<body>
    @if (IsPost)
    {
        _veiculoAplicacao.Inserir();
        Response.Redirect("Veiculo");
    }
    <h1>Cadastro de veículos</h1>
    <hr />

    <form>
        <label for="marca">Marca</label>
        <select id="marca" onchange="obterModelos(this.value);">
            <option value="">Selecione</option>
            @{ foreach (var marca in _veiculoAplicacao.Marcas)
                {
                    <option value="@marca.Id" selected="@Convert.ToBoolean(_veiculoAplicacao.MarcaSelecionada == marca.Id.ToString())">@marca.Nome</option>
                }}
        </select>
        <br />

        <label for="modelo">Modelo</label>
        <select id="modelo">
            <option value="">Selecione</option>
            @{ foreach (var modelo in _veiculoAplicacao.Modelos)
                {
                    <option value="@modelo.Id">@modelo.Nome</option>
                }}
        </select>
        <br />

        <label for="placa">Placa</label>
        <input type="text" id="placa" />
        <br />

        <label for="ano">Ano</label>
        <input type="text" id="ano" />
        <br />

        <label for="cor">Cor</label>
        <select id="cor">
            <option value="">Selecione</option>
            @{ foreach (var cor in _veiculoAplicacao.Cores)
                {
                    <option value="@cor.Id">@cor.Nome</option>
                }}
        </select>
        <br />

        <label for="combustivel">Combustível</label>
        <select id="combustivel">
            <option value="">Selecione</option>
            @{ foreach (var combustivel in _veiculoAplicacao.Combustiveis)
                {
                    <option value="@((int)combustivel)">@combustivel</option>
                }}
        </select>
        <br />

        <label for="cambio">Câmbio</label>
        <select id="cambio">
            <option value="">Selecione</option>
            @{ foreach (var cambio in _veiculoAplicacao.Cambios)
                {
                    <option value="@((int)cambio)">@cambio</option>
                }}
        </select>
        <br />

        <label for="observacao">Observação</label>
        <br />
        <textarea id="observacao" rows="10" cols="40"></textarea>
        <br />

        <input type="submit" value="Gravar" />
    </form>

    <script type="text/javascript">
        function obterModelos(marcaId) {
            var nomePagina = document.location.pathname;
            document.location.href = nomePagina + "?marcaId=" + marcaId;
        }
    </script>
</body>
</html>